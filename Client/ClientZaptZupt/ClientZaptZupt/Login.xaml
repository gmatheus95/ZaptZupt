<Window x:Class="ClientZaptZupt.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientZaptZupt"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300" Background="Black">
    <Grid>
        <Label x:Name="lblRequest" Content="Enter your nickname:" Foreground="White" FontSize="20" HorizontalAlignment="Left" Margin="30,68,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNickName" FontSize="20" HorizontalAlignment="Left" Height="35" Margin="30,110,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="234"/>
        <Button x:Name="btnJoinServer" FontSize="18" Content="Sign-in!" HorizontalAlignment="Left" Margin="110,165,0,0" VerticalAlignment="Top" Width="83" Height="37"/>

    </Grid>
</Window>
